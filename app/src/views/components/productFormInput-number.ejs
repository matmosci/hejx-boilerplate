<input
  type="number"
  id="product-form-input-<%= input.name %>"
  class="form-control"
  inputmode="numeric"
  oninput="if (this.value) htmx.trigger(this.form, 'change')"
  <%= input.value ? `value=${input.value}` : '' %>
  <%= input.min ? `min=${input.min}` : '' %>
  <%= input.max ? `max=${input.max}` : '' %>
  <%= input.step ? `step=${input.step}` : '' %>
/>
