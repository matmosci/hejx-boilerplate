<main>
    <div class="container mt-2">
        <div class="row">
            <h1>
                <a class="back text-decoration-none text-primary" href="/products">&larr;</a>
                Checkout
            </h1>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-2">
                    <div class="card-header">Cart</div>
                    <div class="card-body p-0 pb-2" id="checkout-cart-content">
                        <%- include('../components/cartCheckoutContent'); %>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-2">
                    <div class="card-header">Customer</div>
                    <div class="card-body">
                        <%- include('../components/cartCheckoutUser'); %>
                    </div>
                </div>
                <div class="card mb-2">
                    <div class="card-header">Shipping</div>
                    <div class="card-body">
                        <%- include('../components/cartCheckoutShipping'); %>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-2">
                    <div class="card-header">Summary</div>
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="me-2">Subtotal</div>
                            <div class="ms-auto fw-bold"><%= cart.costSubtotal.toFixed(2) %> zł</div>
                        </div>
                        <div class="d-flex">
                            <div class="me-2">Shipping</div>
                            <div class="ms-auto fw-bold">0.00 zł</div>
                        </div>
                        <div class="d-flex">
                            <div class="me-2">Total</div>
                            <div class="ms-auto fw-bold"><%= cart.costSubtotal.toFixed(2) %> zł</div>
                        </div>
                        <div class="text-center">
                            <a class="btn btn-primary w-100 d-block mt-2" hx-post="/cart/order">Place an Order</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>