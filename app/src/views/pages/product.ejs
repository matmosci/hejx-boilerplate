<main>
    <div class="container mt-2">
        <div class="row">
            <div class="col-md-3">
                <h1>
                    <a class="back text-decoration-none text-primary">&larr;</a>
                    <%= product.title %>
                </h1>
                <%- include('../components/productForm'); %>
            </div>
            <div class="col-md-3 mt-2 order-md-last">
                <%- include('../components/productSummary'); %>
            </div>
            <div class="col-md-6 mt-3 mt-md-2 mb-5">
                <%- include('../components/productOverview'); %>
            </div>
        </div>
    </div>
    <script>
        document.querySelector("a.back").href = sessionStorage.getItem('last-product-listing') ?? "/products";
    </script>
</main>
